<%- include("../partials/header.ejs") %>

<div class="container mt-5">

 <h2 class="text-center mb-4"> Register to Rent-it </h2>
 	<div class="row justify-content-center">
		<div class="col-md-5">
			<form action="/register" method="POST">
				<input class="form-control mb-3" type="text" name= username placeholder="Username*" required>	
				<div class="form-row">
					<div class="col-md-6">
						<input class="form-control mb-3" type="text" name=firstname placeholder="First name*" required>		
					</div>
					<div class="col-md-6">
						<input class="form-control mb-3" type="text" name=lastname placeholder="Last name*" required>		
					</div>	
				</div>
				<div class="form-row">
					<div class="col-md-6">
						<input class="form-control mb-3" type="text" name=insta placeholder="Instagram id">		
					</div>
					<div class="col-md-6">
						<input class="form-control mb-3" type="text" name=fb placeholder="Facebook id">		
					</div>	
				</div>	
				<input class="form-control mb-3" type="email" name=email placeholder="Email*" required>
				<input class="form-control mb-3" type="text" name=mobile placeholder="Mobile no.*" required>
				<input class="form-control mb-3" type="text" name=address placeholder="State, Country*" required>
				<input class="form-control mb-3" type="text" name=profilePhoto placeholder="Profile picture">		
				<input class="form-control mb-3" type="password" name="password" placeholder="Password*" required>
				<button class="btn btn-large btn-primary btn-block form-group"> Register </button>
			</form>
			<a href="/items">Go Back</a>
		</div>
	</div> 
</div>


<%- include("../partials/footer.ejs") %>
